.side-bar
  .side-header
    .side-header__box
      .side-header__box__name
        = current_user.name
      .side-header__box__menu
        = link_to new_group_path, class: 'side-header__box__btn' do
          = icon('far', 'edit')
          %span<>
        = link_to edit_user_path(current_user), class: 'side-header__box__btn' do
          = icon('fa',  'cog')
          %span<>
  .groups
    - current_user.groups.each do |group|
      .group
        =link_to group_messages_path(group), class: "group" do
          .group__group-name
            = group.name
          .group__latest-message
            = group.show_last_message
  