.main-chat
  .group-info
    .group-info__leftbox
      .group-info__leftbox__group-name
        = @group.name
      %ul.group-info__leftbox__member
        Memberï¼š
        %li.group-info__leftbox__member__first
          - @group.group_users.each do |group_user|
            = group_user.user.name
    .group-info__edit
      = link_to edit_group_path(@group), class: 'group-info__edit__btn' do
        Edit
  .message-list
    = render @messages
  .form
    = form_for [@group, @message] do |f|
      .input-box
        = f.text_field :body, class: 'input-box__text', placeholder: 'type a message'
        = f.label :image, class: 'input-box__image' do
          = icon('fas', 'image')
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'

